	//  Дано целое число A. Проверить истинность высказывания: «Число A является нечетным».

	#include "pch.h"
	#include <iostream>
	using namespace std;

	int main()
	{
		int a;
		cout << "enter a" << endl;
		cin >> a;

		if (a % 2 != 0) {
			cout << "a is odd" << endl;
		}
		else
		{
			cout << "a is even" << endl;
		}
		return 0;


	}
