/* Case10. Робот может перемещаться в четырех направлениях («С» — север, «З» — запад, «Ю» — юг, «В» — восток) и принимать
три цифровые команды:0 — продолжать движение, 1 — поворот налево, –1 — поворот направо. Дан символ C — исходное
направление робота и целое число N —посланная ему команда. Вывести направление робота после выполнения полученной команды. */

#include "pch.h"
#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
	int A;
	cout << "enter A (0 or 1 or 2)" << endl;
	cin >> A;

	switch (A)
	{
	case 0:
		cout << "N" << endl;
		break;
	case 1:
		cout << "W" << endl;
		break;
	case 2:
		cout << "E" << endl;
		break;
	default :
		cout << "A must be 0 or 1 or 2" << endl;
	}
	
	return 0;
}
