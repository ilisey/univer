// Известно, что X кг конфет стоит A рублей. Определить, сколько стоит 1 кг и Y кг этих же конфет.

#include "pch.h"
#include <iostream>
using namespace std;

int main()
{
	float X;
	cout << "enter X"<< endl;
	cin >> X;
	float A;
	cout << "enter A" << endl;
	cin >> A;
	float Y;
	cout << "enter Y" << endl;
	cin >> Y;

	float price = X / A;
	cout << "price of 1= " << price << endl;
	cout << "price of Y= " << price * Y << endl;

	return 0;


}
